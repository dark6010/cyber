extends layout

block content
  h2 Lista de Productos
  form(method='POST' action='/regLista')
    label(for="nombre") Nombre de la lista: 
    input(type="text", name="nombre", id="nombre")
    table.table.table-striped
      thead
        tr
          th Nombre
          th Precio
          th Descripci√≥n
          th Habilitar
      tbody
        each producto, index in productos
          tr
            td #{producto.nombre}
            td #{producto.precio}
            td #{producto.descripcion}
            td
              input(type="checkbox", name="p["+index+"]", value=producto._id)
      row
    row
      .col-xs-12.col-md-12
      button.btn.btn-primary(type='submit') Enviar